<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/name_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your name"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_design"/>

    <EditText
        android:id="@+id/email_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your email"
        android:textAlignment="center"
        android:layout_below="@+id/name_editText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_design"/>

    <EditText
        android:id="@+id/mobile_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your mobile"
        android:textAlignment="center"
        android:layout_below="@+id/email_editText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_design"/>

    <EditText
        android:id="@+id/city_editText"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter your city"
        android:textAlignment="center"
        android:layout_below="@+id/mobile_editText"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:background="@drawable/background_design"/>
    <Button
        android:id="@+id/saveData"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/city_editText"
        android:text="Save Date"
        android:padding="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/coustard"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>
    <Button
        android:id="@+id/killActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/saveData"
        android:text="Exit"
        android:padding="20dp"
        android:textSize="20sp"
        android:fontFamily="@font/coustard"
        android:layout_marginTop="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"/>

</RelativeLayout>